      --accent:#0b57d0;
    }
    *{box-sizing:border-box}
    body{
      margin:0;
      font-family:Tahoma,Verdana,Arial,sans-serif;
      background:var(--bg);
      color:var(--text);
    }
    header{
      position:sticky; top:0; z-index:10;
