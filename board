<body>
  <header>
    <div class="wrap">
      <div class="row">
        <div class="title">구인 게시판</div>
        <div class="hint">전체 공개 · 컨택은 비밀댓글(관리자+글쓴이)로 진행 예정</div>
        <div class="right row">
          <a class="btn" href="index.html">← 홈으로</a>
          <button class="btn primary" id="openWrite">글쓰기</button>
        </div>
      </div>
    </div>
  </header>

  <main class="wrap">
    <div class="grid" id="list"></div>
    <div class="hint" id="status" style="padding:0 14px 18px;"></div>
  </main>

  <!-- 글쓰기 모달 -->
  <div class="modal-back" id="writeBack">
    <div class="modal">
      <div class="modal-head">
        <b>새 글</b>
        <span class="right link" id="closeWrite">닫기</span>
      </div>
      <div class="modal-body">
        <div style="display:grid;gap:10px">
          <input class="input" id="wTitle" placeholder="제목" />
          <input class="input" id="wAuthor" placeholder="작성자(닉네임)" />
          <textarea id="wContent" placeholder="내용"></textarea>
          <div class="row">
            <button class="btn" id="seedTest">테스트값 채우기</button>
            <div class="right row">
              <button class="btn" id="cancelWrite">취소</button>
              <button class="btn primary" id="submitWrite">등록</button>
            </div>
          </div>
          <div class="hint">※ 비밀댓글 기능은 다음 단계(로그인/권한 or 비밀번호 방식)에서 붙일게. 지금은 “글 목록/등록”부터 정상작동 확인!</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Firebase (script tag 버전) -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-app.js";
    import {
      getFirestore, collection, addDoc, serverTimestamp,
      query, orderBy, onSnapshot
    } from "https://www.gstatic.com/firebasejs/10.12.5/firebase-firestore.js";

    // ✅ 여기만 너 콘솔 값으로 교체
    const firebaseConfig = {
      apiKey: "여기에_너_apiKey",
      authDomain: "여기에_너_authDomain",
      projectId: "여기에_너_projectId",
      storageBucket: "여기에_너_storageBucket",
      messagingSenderId: "여기에_너_messagingSenderId",
      appId: "여기에_너_appId"
      // measurementId 있어도 되고 없어도 됨
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    const $ = (id)=>document.getElementById(id);
    const list = $("list");
    const status = $("status");

    // ====== UI: 모달 ======
    const writeBack = $("writeBack");
    const openWrite = $("openWrite");
    const closeWrite = $("closeWrite");
    const cancelWrite = $("cancelWrite");

    openWrite.onclick = ()=> writeBack.classList.add("show");
    closeWrite.onclick = ()=> writeBack.classList.remove("show");
    cancelWrite.onclick = ()=> writeBack.classList.remove("show");
    writeBack.addEventListener("click",(e)=>{ if(e.target===writeBack) writeBack.classList.remove("show"); });

    // ====== 글쓰기 ======
    const wTitle = $("wTitle");
    const wAuthor = $("wAuthor");
    const wContent = $("wContent");

    $("seedTest").onclick = ()=>{
      wTitle.value = "테스트 게시글입니다";
      wAuthor.value = "관리자";
      wContent.value = "게시판 연결 테스트용 첫 글입니다.";
    };

    $("submitWrite").onclick = async ()=>{
      const title = wTitle.value.trim();
      const author = wAuthor.value.trim();
      const content = wContent.value.trim();
      if(!title || !author || !content){
        alert("제목/작성자/내용을 다 채워줘!");
        return;
      }
      try{
        await addDoc(collection(db, "posts"), {
          title, author, content,
          createdAt: serverTimestamp()
        });
        wTitle.value=""; wAuthor.value=""; wContent.value="";
        writeBack.classList.remove("show");
      }catch(err){
        console.error(err);
        alert("등록 실패… Firestore 규칙/프로젝트 연결 확인 필요. 콘솔(F12) 에러 봐줘.");
      }
    };

    // ====== 목록 실시간 표시 ======
    const q = query(collection(db, "posts"), orderBy("createdAt", "desc"));
    onSnapshot(q, (snap)=>{
      list.innerHTML = "";
      if(snap.empty){
        status.textContent = "아직 글이 없어. 첫 글을 올려줘!";
        return;
      }
      status.textContent = "";
      snap.forEach(doc=>{
        const d = doc.data();
        const when = d.createdAt?.toDate ? d.createdAt.toDate() : null;
        const timeText = when ? `${when.toLocaleDateString()} ${when.toLocaleTimeString()}` : "방금";
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <h3>${escapeHtml(d.title || "")}</h3>
          <div class="meta">
            <span>작성자: ${escapeHtml(d.author || "")}</span>
            <span>·</span>
            <span>${timeText}</span>
            <span>·</span>
            <span class="hint">id: ${doc.id}</span>
          </div>
          <div class="content">${escapeHtml(d.content || "")}</div>
        `;
        list.appendChild(card);
      });
    }, (err)=>{
      console.error(err);
      status.textContent = "불러오기 실패… Firestore 규칙/인덱스/프로젝트 연결 확인 필요(콘솔 에러 확인).";
    });

    function escapeHtml(s){
      return String(s).replace(/[&<>"']/g, (m)=>({
        "&":"&amp;","<":"&lt;",">":"&gt;",'"':"&quot;","'":"&#039;"
      }[m]));
    }
  </script>
</body>
</html>
